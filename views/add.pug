extends layouts/layout

block bodyContent
    form(method="POST", action=action)
        div
            label(for="firstName") First Name
            input(type="text", autocomplete="firstName", id="firstName", name="firstName", required)
        div
            label(for="lastName") last Name
            input(type="text", autocomplete="lastName", id="lastName", name="lastName", required)
        div
            label(for="email") Email
            input(type="email", autocomplete="email", id="email", name="email", required)
        div
            label(for="age") Age
            input(type="number", min=0, max=123, id="age", name="age", required)
        input(type="submit", value="SUBMIT")